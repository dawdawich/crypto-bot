FROM gradle:jdk22 AS build

WORKDIR /crypto-bot

COPY --chown=gradle:gradle . /crypto-bot

RUN gradle :backtest-service:build

FROM openjdk:22-jdk-slim

COPY --from=build /crypto-bot/backtest-service/build/libs/backtest-service-0.0.1-SNAPSHOT.jar /app/app.jar

CMD ["java", "-Xmx32g", "-jar", "/app/app.jar"]
